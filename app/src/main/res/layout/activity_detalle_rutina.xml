<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_rutina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitrainer.upm.fitrainer.DetalleRutina">


    <ExpandableListView
        android:id="@+id/list_rutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnModDetRut"
        android:layout_below="@+id/tvNomRut">
    </ExpandableListView>

    <Button
        android:text="@string/btnModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnModDetRut"
        android:layout_marginEnd="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNomRut"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
