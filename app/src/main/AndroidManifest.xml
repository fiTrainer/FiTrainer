<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitrainer.upm.fitrainer">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListadoCategorias" />
        <activity
            android:name=".DetalleCategoria"
            android:label="@string/title_activity_detalle_categoria"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InicioSesion"
            android:label="@string/title_activity_inicio_sesion" />
        <activity android:name=".RegistroModificacion" />
        <activity android:name=".Calendario" />
        <activity android:name=".ConfigurarEjercicios" />
        <activity android:name=".MisRutinas" />
        <activity android:name=".CrearModificarMenu" />
        <activity android:name=".ListadoMenus"></activity>
    </application>

</manifest>